{
  "dashboard": {
    "id": null,
    "uid": "sample-1",
    "title": "DevOps Monitoring Dashboard",
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "10s",
    "panels": [
      {
        "type": "graph",
        "title": "CPU Usage (%)",
        "targets": [
          {
            "expr": "100 - (avg by(instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}",
            "datasource": "Prometheus"
          }
        ],
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "graph",
        "title": "Memory Usage (%)",
        "targets": [
          {
            "expr": "100 - ((node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100)",
            "legendFormat": "{{instance}}",
            "datasource": "Prometheus"
          }
        ],
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 }
      },
      {
        "type": "graph",
        "title": "Disk Usage (%)",
        "targets": [
          {
            "expr": "(1 - (node_filesystem_avail_bytes{fstype!=\"tmpfs\"} / node_filesystem_size_bytes{fstype!=\"tmpfs\"})) * 100",
            "legendFormat": "{{instance}}",
            "datasource": "Prometheus"
          }
        ],
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 }
      },
      {
        "type": "graph",
        "title": "Network Traffic (Bytes/s)",
        "targets": [
          {
            "expr": "irate(node_network_receive_bytes_total[5m])",
            "legendFormat": "Receive - {{instance}}",
            "datasource": "Prometheus"
          },
          {
            "expr": "irate(node_network_transmit_bytes_total[5m])",
            "legendFormat": "Transmit - {{instance}}",
            "datasource": "Prometheus"
          }
        ],
        "gridPos": { "x": 12, "y": 8, "w": 12, "h": 8 }
      },
      {
        "type": "stat",
        "title": "Backend Uptime (seconds)",
        "targets": [
          {
            "expr": "up{job=\"backend\"}",
            "legendFormat": "Backend Status",
            "datasource": "Prometheus"
          }
        ],
        "gridPos": { "x": 0, "y": 16, "w": 24, "h": 4 }
      }
    ]
  },
  "overwrite": true
}
